{
    "compilerOptions": {
        "lib": ["es2017", "dom"],
        "rootDir": "src",
        "outDir": "dist",
        "typeRoots": ["src/index.ts", "src/api/*.ts"],
        "declaration": true,
        "declarationDir": "dist/types",
        "strict": true,
        "noImplicitAny": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "skipLibCheck": true,
        "noLib": false,
        "moduleResolution": "node"
    },
    "include": ["src/**/*.ts"]
}
